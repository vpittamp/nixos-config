{
  "name": "Project Switch Multi-Step Workflow",
  "description": "Demonstrates multi-step action sequence: launch app → switch workspace → focus window",
  "tags": ["workflow", "project-management", "multi-step", "integration"],
  "priority": "P2",
  "timeout": 10000,
  "actions": [
    {
      "type": "launch_app",
      "params": {
        "command": "alacritty",
        "args": [],
        "env": {
          "I3PM_PROJECT_NAME": "test-project",
          "I3PM_PROJECT_ROOT": "/tmp/test-project"
        },
        "delay": 500
      }
    },
    {
      "type": "switch_workspace",
      "params": {
        "workspace": 2,
        "delay": 200
      }
    },
    {
      "type": "focus_window",
      "params": {
        "window_criteria": {
          "app_id": "Alacritty"
        },
        "delay": 100
      }
    }
  ],
  "expectedState": {
    "focusedWorkspace": 2,
    "workspaces": [
      {
        "num": 2,
        "focused": true,
        "visible": true,
        "windows": [
          {
            "app_id": "Alacritty",
            "focused": true
          }
        ]
      }
    ]
  }
}
