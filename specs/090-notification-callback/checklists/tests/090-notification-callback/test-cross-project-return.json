{
  "name": "Cross-project navigation after notification",
  "description": "Verify system switches projects and focuses terminal when user in different project (state verification only - manual UI testing needed for full workflow)",
  "tags": ["notification", "focus", "cross-project", "us1"],
  "timeout": 5000,
  "actions": [
    {
      "type": "launch_app",
      "params": {
        "app_name": "terminal",
        "workspace": 1,
        "sync": true
      }
    },
    {
      "type": "switch_workspace",
      "params": {
        "workspace": 5
      }
    },
    {
      "type": "sway_command",
      "params": {
        "command": "[workspace=1] focus"
      }
    }
  ],
  "expectedState": {
    "focusedWorkspace": 1,
    "windowCount": 1,
    "workspaces": [
      {
        "num": 1,
        "focused": true,
        "windows": [
          {
            "app_id": "com.mitchellh.ghostty",
            "focused": true
          }
        ]
      }
    ]
  }
}
