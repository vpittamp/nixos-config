{
  "api": "Layout Management",
  "version": "1.0",
  "protocol": "JSON-RPC 2.0",
  "description": "Layout capture and restore operations for window management",
  "methods": [
    {
      "name": "layout_save",
      "description": "Capture current window layout and save to file",
      "params": {
        "type": "object",
        "properties": {
          "project_name": {
            "type": "string",
            "required": true,
            "description": "Project to save layout for",
            "pattern": "^[a-zA-Z0-9_-]+$"
          },
          "layout_name": {
            "type": "string",
            "required": false,
            "description": "Custom layout name (defaults to project_name)",
            "pattern": "^[a-zA-Z0-9_-]+$"
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "project": {
            "type": "string",
            "description": "Project name"
          },
          "layout_name": {
            "type": "string",
            "description": "Layout name (may differ from input if default used)"
          },
          "windows_captured": {
            "type": "integer",
            "description": "Number of windows saved in layout"
          },
          "file_path": {
            "type": "string",
            "description": "Absolute path to saved layout file"
          }
        }
      },
      "errors": [
        {
          "code": -32602,
          "message": "Invalid params",
          "description": "Missing required parameter (project_name)"
        },
        {
          "code": 1001,
          "message": "Project not found",
          "description": "Specified project does not exist",
          "data": {
            "project_name": "string"
          }
        },
        {
          "code": 1004,
          "message": "File I/O error",
          "description": "Failed to write layout file",
          "data": {
            "path": "string",
            "details": "string"
          }
        },
        {
          "code": 1005,
          "message": "i3 IPC error",
          "description": "Failed to query i3/Sway window tree",
          "data": {
            "details": "string"
          }
        }
      ],
      "example_request": {
        "jsonrpc": "2.0",
        "method": "layout_save",
        "params": {
          "project_name": "nixos",
          "layout_name": "default"
        },
        "id": 1
      },
      "example_response": {
        "jsonrpc": "2.0",
        "result": {
          "project": "nixos",
          "layout_name": "default",
          "windows_captured": 10,
          "file_path": "/home/user/.config/i3/layouts/nixos-default.json"
        },
        "id": 1
      }
    },
    {
      "name": "layout_restore",
      "description": "Restore windows to saved layout positions",
      "params": {
        "type": "object",
        "properties": {
          "project_name": {
            "type": "string",
            "required": true,
            "description": "Project to restore layout for"
          },
          "layout_name": {
            "type": "string",
            "required": false,
            "description": "Layout name (defaults to project_name)"
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "restored": {
            "type": "integer",
            "description": "Number of windows successfully restored"
          },
          "missing": {
            "type": "array",
            "description": "Windows that could not be restored (not currently open)",
            "items": {
              "type": "object",
              "properties": {
                "app_id": {
                  "type": "string",
                  "description": "Application identifier"
                },
                "app_name": {
                  "type": "string",
                  "description": "Application name (e.g., vscode)"
                },
                "workspace": {
                  "type": "integer",
                  "description": "Workspace number where window should be"
                }
              }
            }
          },
          "total": {
            "type": "integer",
            "description": "Total windows in layout"
          }
        }
      },
      "errors": [
        {
          "code": -32602,
          "message": "Invalid params",
          "description": "Missing required parameter"
        },
        {
          "code": 1002,
          "message": "Layout not found",
          "description": "Layout file does not exist for project",
          "data": {
            "project_name": "string",
            "layout_name": "string",
            "path": "string"
          }
        },
        {
          "code": 1003,
          "message": "Validation error",
          "description": "Layout file contains invalid data",
          "data": {
            "errors": "array"
          }
        },
        {
          "code": 1005,
          "message": "i3 IPC error",
          "description": "Failed to move windows or query state"
        }
      ],
      "example_request": {
        "jsonrpc": "2.0",
        "method": "layout_restore",
        "params": {
          "project_name": "nixos"
        },
        "id": 2
      },
      "example_response": {
        "jsonrpc": "2.0",
        "result": {
          "restored": 8,
          "missing": [
            {
              "app_id": "lazygit-nixos-20251103-123",
              "app_name": "lazygit",
              "workspace": 5
            },
            {
              "app_id": "yazi-nixos-20251103-456",
              "app_name": "yazi",
              "workspace": 3
            }
          ],
          "total": 10
        },
        "id": 2
      }
    },
    {
      "name": "layout_list",
      "description": "List all saved layouts for a project",
      "params": {
        "type": "object",
        "properties": {
          "project_name": {
            "type": "string",
            "required": true,
            "description": "Project to list layouts for"
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "project": {
            "type": "string",
            "description": "Project name"
          },
          "layouts": {
            "type": "array",
            "description": "List of layouts",
            "items": {
              "type": "object",
              "properties": {
                "layout_name": {
                  "type": "string"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time"
                },
                "windows_count": {
                  "type": "integer"
                },
                "file_path": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "errors": [
        {
          "code": 1001,
          "message": "Project not found"
        }
      ],
      "example_request": {
        "jsonrpc": "2.0",
        "method": "layout_list",
        "params": {
          "project_name": "nixos"
        },
        "id": 3
      },
      "example_response": {
        "jsonrpc": "2.0",
        "result": {
          "project": "nixos",
          "layouts": [
            {
              "layout_name": "default",
              "timestamp": "2025-11-03T14:30:00",
              "windows_count": 10,
              "file_path": "/home/user/.config/i3/layouts/nixos-default.json"
            },
            {
              "layout_name": "coding",
              "timestamp": "2025-11-02T10:15:00",
              "windows_count": 5,
              "file_path": "/home/user/.config/i3/layouts/nixos-coding.json"
            }
          ]
        },
        "id": 3
      }
    },
    {
      "name": "layout_delete",
      "description": "Delete a saved layout",
      "params": {
        "type": "object",
        "properties": {
          "project_name": {
            "type": "string",
            "required": true,
            "description": "Project name"
          },
          "layout_name": {
            "type": "string",
            "required": true,
            "description": "Layout to delete"
          }
        }
      },
      "result": {
        "type": "object",
        "properties": {
          "deleted": {
            "type": "boolean",
            "description": "Whether layout was deleted"
          },
          "layout_name": {
            "type": "string"
          }
        }
      },
      "errors": [
        {
          "code": 1002,
          "message": "Layout not found"
        }
      ],
      "example_request": {
        "jsonrpc": "2.0",
        "method": "layout_delete",
        "params": {
          "project_name": "nixos",
          "layout_name": "old-layout"
        },
        "id": 4
      },
      "example_response": {
        "jsonrpc": "2.0",
        "result": {
          "deleted": true,
          "layout_name": "old-layout"
        },
        "id": 4
      }
    }
  ],
  "error_codes": {
    "-32700": "Parse error - Invalid JSON",
    "-32600": "Invalid Request - Not valid JSON-RPC 2.0",
    "-32601": "Method not found",
    "-32602": "Invalid params",
    "-32603": "Internal error",
    "1001": "Project not found",
    "1002": "Layout not found",
    "1003": "Validation error",
    "1004": "File I/O error",
    "1005": "i3 IPC error"
  },
  "notes": [
    "All timestamps are ISO 8601 format (YYYY-MM-DDTHH:MM:SS)",
    "Window matching uses I3PM_APP_ID from environment variables (deterministic)",
    "Layout files support schema versioning for backward compatibility",
    "Missing windows during restore are reported but do not cause operation to fail"
  ]
}
