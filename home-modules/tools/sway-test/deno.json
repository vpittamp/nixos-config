{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/json": "jsr:@std/json@^1.0.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/fmt/colors": "jsr:@std/fmt@^1.0.0/colors",
    "zod": "npm:zod@^3.22.0"
  },
  "tasks": {
    "dev": "deno run --allow-all --watch main.ts",
    "test": "deno test --allow-all",
    "test:basic": "deno test --allow-all tests/sway-tests/basic/",
    "test:integration": "deno test --allow-all tests/sway-tests/integration/",
    "test:regression": "deno test --allow-all tests/sway-tests/regression/",
    "test:unit": "deno test --allow-all tests/unit/",
    "test:coverage": "deno test --allow-all --coverage=coverage/",
    "coverage": "deno coverage coverage/ --exclude=tests/",
    "coverage:html": "deno coverage coverage/ --exclude=tests/ --html",
    "compile": "deno compile --allow-all --output=sway-test main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check main.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/"],
    "exclude": []
  },
  "coverage": {
    "exclude": [
      "tests/",
      "main.ts"
    ]
  }
}
