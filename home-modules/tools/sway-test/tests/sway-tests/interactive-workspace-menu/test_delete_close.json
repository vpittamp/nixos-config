{
  "name": "Delete key closes selected window",
  "description": "Test Delete key closes window without exiting workspace mode, updates preview list",
  "actions": [
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "[app_id=\"alacritty\"] kill"
      }
    },
    {
      "type": "launch_app_sync",
      "params": {
        "app_name": "alacritty"
      }
    },
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "mode \"â†’ WS\""
      }
    },
    {
      "type": "wait",
      "params": {
        "duration_ms": 100
      }
    },
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "exec i3pm-workspace-mode nav down"
      }
    },
    {
      "type": "wait",
      "params": {
        "duration_ms": 50
      }
    },
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "exec i3pm-workspace-mode delete"
      }
    },
    {
      "type": "wait",
      "params": {
        "duration_ms": 600
      }
    },
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "mode default"
      }
    }
  ],
  "expectedState": {
    "mode": "partial",
    "assertions": [
      {
        "type": "window_count",
        "count": 0,
        "description": "Window should be closed"
      },
      {
        "type": "workspace_empty",
        "workspace_num": 1,
        "description": "Workspace 1 should be empty after delete"
      }
    ]
  }
}
