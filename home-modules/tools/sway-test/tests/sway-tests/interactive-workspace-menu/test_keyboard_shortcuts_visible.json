    {
      "type": "wait",
      "params": {
        "duration": 500
      }
    },
    {
      "type": "comment",
      "params": {
        "text": "Enter workspace mode - keyboard hints should appear within 50ms"
      }
    },
    {
      "type": "send_ipc_sync",
      "params": {
        "ipc_command": "mode \"â†’ WS\""
