{
  "name": "Production application launch test",
  "description": "Launch Firefox via app-launcher-wrapper and verify it appears on workspace 3",
  "tags": ["app-launch", "workspace", "i3pm"],
  "timeout": 15000,
  "actions": [
    {
      "type": "launch_app",
      "params": {
        "app_name": "firefox"
      }
    },
    {
      "type": "wait_event",
      "params": {
        "event_type": "window",
        "timeout": 8000,
        "criteria": {
          "change": "new",
          "app_id": "firefox"
        }
      }
    }
  ],
  "expectedState": {
    "windows": [
      {
        "app_id": "firefox",
        "workspace": 3
      }
    ]
  }
}
