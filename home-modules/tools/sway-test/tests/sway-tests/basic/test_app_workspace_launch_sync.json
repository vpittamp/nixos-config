{
  "name": "Application workspace launch test",
  "description": "Test that launching Firefox on workspace 2 creates a window on the expected workspace (migrated to sync pattern - eliminates race conditions and arbitrary timeouts)",
  "tags": [
    "basic",
    "app-launch",
    "workspace",
    "sync",
    "migrated"
  ],
  "timeout": 10000,
  "actions": [
    {
      "type": "switch_workspace",
      "params": {
        "workspace": 2
      }
    },
    {
      "type": "launch_app_sync",
      "params": {
        "app_name": "firefox",
        "command": "firefox",
        "args": [
          "--new-window"
        ]
      }
    }
  ],
  "expectedState": {
    "focusedWorkspace": 2,
    "workspaces": [
      {
        "num": 2,
        "focused": true,
        "visible": true
      }
    ],
    "windows": [
      {
        "app_id": "firefox",
        "workspace": 2
      }
    ]
  }
}
