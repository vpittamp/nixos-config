{
  "name": "I3PM environment variables validation",
  "description": "Validates that apps launched via wrapper have correct I3PM_* environment variables set (I3PM_APP_NAME, I3PM_TARGET_WORKSPACE, I3PM_PROJECT_NAME) (migrated to sync pattern - eliminates race conditions and arbitrary timeouts)",
  "tags": [
    "integration",
    "environment",
    "i3pm",
    "sync",
    "migrated"
  ],
  "priority": "P2",
  "timeout": 20000,
  "actions": [
    {
      "type": "launch_app_sync",
      "params": {
        "app_name": "alacritty",
        "project": "sway-test",
        "workspace": 7,
        "sync": true
      }
    },
    {
      "type": "await_sync",
      "params": {
        "marker": "alacritty_ready"
      }
    },
    {
      "type": "validate_environment",
      "params": {
        "app_name": "alacritty",
        "expected_vars": {
          "I3PM_APP_NAME": "alacritty",
          "I3PM_TARGET_WORKSPACE": "7",
          "I3PM_PROJECT_NAME": "sway-test"
        }
      }
    },
    {
      "type": "validate_workspace_assignment",
      "params": {
        "app_name": "alacritty",
        "expected_workspace": 7
      }
    }
  ],
  "expectedState": {
    "workspaces": [
      {
        "num": 7,
        "windows": [
          {
            "app_id": "Alacritty",
            "focused": true
          }
        ]
      }
    ],
    "focusedWorkspace": 7
  }
}
