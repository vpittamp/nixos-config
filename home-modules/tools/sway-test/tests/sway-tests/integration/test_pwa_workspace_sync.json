{
  "name": "PWA launches on configured workspace",
  "description": "Validates that a PWA with custom app_id (e.g., FFPWA-01J5M6WBDDJQFCPBSAM7RRQ2BE) launches on its configured workspace 52 (migrated to sync pattern - eliminates race conditions and arbitrary timeouts)",
  "tags": [
    "integration",
    "workspace-assignment",
    "pwa",
    "sync",
    "migrated"
  ],
  "priority": "P2",
  "timeout": 20000,
  "actions": [
    {
      "type": "launch_app_sync",
      "params": {
        "app_name": "youtube-music",
        "sync": true
      }
    },
    {
      "type": "await_sync",
      "params": {
        "marker": "pwa_window_ready"
      }
    },
    {
      "type": "validate_workspace_assignment",
      "params": {
        "app_name": "youtube-music",
        "expected_workspace": 52
      }
    }
  ],
  "expectedState": {
    "workspaces": [
      {
        "num": 52,
        "windows": [
          {
            "name": "YouTube Music"
          }
        ]
      }
    ],
    "focusedWorkspace": 52,
    "assertions": [
      {
        "path": "workspaces[?num==52].windows[0].app_id",
        "expected": "FFPWA-*",
        "operator": "matches"
      }
    ]
  }
}
